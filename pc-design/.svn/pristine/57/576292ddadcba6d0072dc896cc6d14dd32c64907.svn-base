//确认按钮
@mixin primary-btn($color, $name) {
  .el-button--primary#{$name} {
    color: #fff;
    background-color: $color;
    border-color: $color;
  }

  .el-button--primary#{$name}:hover,
  .el-button--primary#{$name}:focus {
    color: #fff;
    background-color: lighten($color, 5%);
    border-color: lighten($color, 5%);
  }

  .el-button--primary#{$name}:active {
    background-color: darken($color, 5%);
    border-color: darken($color, 5%);
    color: #fff;
    outline: none;
  }

  .el-button--primary#{$name}.is-disabled,
  .el-button--primary#{$name}.is-disabled:active,
  .el-button--primary#{$name}.is-disabled:focus,
  .el-button--primary#{$name}.is-disabled:hover {
    color: #fff;
    background-color: lighten($color, 20%);
    border-color: lighten($color, 20%);
  }

  .el-switch__label.is-active {
    color: $black-wd1;
  }

  .checkbox#{$name} {
    .el-checkbox__inner {
      border-color: $gray-zl3;
    }

    .el-checkbox__inner:hover {
      border-color: $color;
    }

    .el-checkbox__input.is-checked .el-checkbox__inner,
    .el-checkbox__input.is-indeterminate .el-checkbox__inner {
      border-color: $color;
      background-color: $color;
    }

    .el-checkbox__input.is-checked+.el-checkbox__label {
      color: $black-wd1;
    }
  }

  //下拉框
  .el-select#{$name} {
    &.el-select .el-input.is-focus .el-input__inner {
      border-color: $color;
    }
  }

  .el-select-dropdown__item#{$name}.selected {
    color: $color;
  }

  //单选框
  .el-radio#{$name} {
    .el-radio__input.is-checked+.el-radio__label {
      color: $color;
    }

    .el-radio__input.is-checked .el-radio__inner {
      background: $color;
      border-color: $color;
    }
  }



  //表格
  .table#{$name} {
    &.el-table th {
      border-bottom: 1px #fff solid !important;
      background-color: $gray-fh1;
      color: $gray-zl1;
      font-weight: bold;
      font-size: 14px;
      padding: 8px 0;

      &.is-leaf {
        border: none;
      }
    }

    &.el-table td {
      padding: 12px 0;
      border: none;
    }

    .el-switch__label.is-active {
      color: $black-wd1;
    }

    .el-table--small td {
      padding: 14px 0;
    }

    .el-checkbox__inner {
      border-color: $gray-zl3;
    }

    .el-checkbox__inner:hover {
      border-color: $color;
    }

    .el-checkbox__input.is-checked .el-checkbox__inner,
    .el-checkbox__input.is-indeterminate .el-checkbox__inner {
      border-color: $color;
      background-color: $color;
    }

    &.el-table .cell {
      font-size: 14px;
      padding-right: 2px;

      .el-checkbox {
        float: right;
      }
    }

    .iconfont {
      color: $green-gray;
    }
  }


}

