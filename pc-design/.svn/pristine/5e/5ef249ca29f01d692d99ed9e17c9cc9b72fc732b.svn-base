// #region scrollbar

$scrollbar-width: 8px;
$scrollbar-bg: #999;
$scrollbar-hover-bg: #555;

@mixin scrollbar($width: $scrollbar-width, $bg:$scrollbar-bg, $hover-bg: $scrollbar-hover-bg) {
  &::-webkit-scrollbar {
    width: $width;
  }

  &::-webkit-scrollbar-thumb {
    background-color: $bg;

    &:hover {
      background-color: $hover-bg;
    }
  }
}

